<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - 僑光圖書網</title>


    <link href="~/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />



    
    <style>
        .form-group{
            margin-top:10px;
        }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">僑光圖書網</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index")">類别管理</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create")">類别新增</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("BookList")">圖書列表</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("BookCreate")">圖書新增</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("MemberList")">會員列表</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "Home")">登出</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">@User.Identity.Name 您好</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-3">
        @RenderBody()
    </div>

    <footer class="border-top text-muted mt-3">
        <div class="container mt-3">
            &copy; @DateTime.Now.Year - 僑光圖書網 <a href="#">Jasper</a>
        </div>
    </footer>


    <script src="~/jquery/jquery.min.js"></script>


    <script src="~/bootstrap/dist/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required:false)

</body>
</html>